@model Product

@{
    ViewData["Title"] = "Add a New Product";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row mb-1 justify-content-center">
            <h1 class="display-4 text-center">Add a New Product</h1>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form class="form" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Name" class="control-label col-3"></label>
                        <input asp-for="Name" class="form-control col-9" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Brand" class="control-label col-3"></label>
                        <input asp-for="Brand" class="form-control col-9" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="control-label col-3"></label>
                        <textarea asp-for="Description" class="form-control col-9"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Category" class="control-label col-3"></label>
                        <select asp-for="Category" class="form-control col-9" asp-items="@Html.GetEnumSelectList<ProductCategory>()"></select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="SizeNumber" class="control-label col-3"></label>
                        <input asp-for="SizeNumber" class="form-control col-9" />
                        <span asp-validation-for="SizeNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Category" class="control-label col-3"></label>
                        <select asp-for="Category" class="form-control col-9" asp-items="@Html.GetEnumSelectList<ProductSizeUnit>()"></select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhotoFile" class="control-label col-3"></label>
                        <input asp-for="PhotoFile" class="form-control-file col-9" accept="image/*" />
                        <span asp-validation-for="PhotoFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Product" class="btn btn-success btn-block" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-secondary btn-block" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>