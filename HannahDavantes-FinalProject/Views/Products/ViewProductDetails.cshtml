@model Product

@{
    ViewData["Title"] = "Product Detail";
}
<div class="row my-1">
    <div class="col-8 offset-2 text-center">
        <h2>Product Detail</h2>
    </div>
</div>
<div class="card col-xl-8 offset-xl-2 col-lg-8 offset-lg-1 col-md-12 shadow-lg">
    <div class="card-body row p-2">
        <div class="col col-6">
            @if (Model.Photo != null) {
                <img style="height:300px; width:300px; object-fit:cover;" src="~/img/@Model.Photo" alt="@Model.Name" />
            } else {
                <img style="height:300px; width:300px; object-fit:cover;" src="~/img/default/default.jpg" alt="@Model.Name" />
            }
        </div>
        <div class="col col-6 d-flex flex-column">
            <h5>@Model.Name - @Model.SizeNumber@Model.SizeUnit</h5>
            <small class="text-muted">@Model.Brand</small>
            <div class="mb-3">
                <span class="badge badge-secondary mb-2">@Model.Price.ToString("c")</span>
            </div>
            <div>
                <p>@Model.Description</p>
            </div>
            <div class="btn-group mt-auto" role="group" aria-label="Basic example">
                <a class="btn btn-secondary text-white float-left" asp-action="Index">
                    <i class="bi bi-bag-plus"></i> Back to List
                </a>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")) {
                    <a class="btn btn-primary text-white float-right" asp-action="EditProduct" asp-route-id="@Model.Id">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                }
                    <a class="btn btn-success text-white float-right" asp-controller="Orders" asp-action="AddToBasket" asp-route-id="@Model.Id">
                        <i class="bi bi-bag-plus"></i> Add To Cart
                    </a>
                </div>
        </div>
    </div>
</div>