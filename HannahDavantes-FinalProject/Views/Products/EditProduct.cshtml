@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row mb-1 justify-content-center">
            <h1 class="display-4 text-center">Edit Product</h1>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form class="form" asp-action="EditProduct" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row justify-content-center">
                        @if (@Model.Photo != null) {
                            <img style="height:250px; width:120px; object-fit:cover;" src="~/img/@Model.Photo" alt="@Model.Name" />
                        }
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="Name" class="form-control " />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Brand" class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="control-label col-3"></label>
                        <div class="col-9">
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Category" class="control-label col-3"></label>
                        <div class="col-9">
                            <select asp-for="Category" class="form-control" asp-items="@Html.GetEnumSelectList<ProductCategory>()"></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="SizeNumber" class="control-label col-3"></label>
                        <div class="col-9">
                            <div class="row mx-0">
                                <input asp-for="SizeNumber" class="form-control col-4" />
                                <select asp-for="SizeUnit" class="form-control col-4" asp-items="@Html.GetEnumSelectList<ProductSizeUnit>()"></select>
                                <span asp-validation-for="SizeNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Price"class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="Price" class="form-control col-4" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-3">Change Photo</label>
                        <div class="col-9 mx-0">
                            <input asp-for="PhotoFile" class="form-control-file" accept="image/*" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Photo" />
                    <div class="form-group">
                        <input type="submit" value="Update Product" class="btn btn-success btn-block" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-secondary btn-block" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>