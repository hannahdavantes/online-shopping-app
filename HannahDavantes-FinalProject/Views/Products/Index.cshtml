@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products List";
}
<div class="row">
    <h1 class="display-4">Products List</h1>
</div>
<div class="row">
    @foreach (var product in Model) {
        <div class="card col-xl-4 col-lg-4 col-md-6 col-sm-12 col-xs-12 shadow-lg">
            <div class="card-body row p-2">
                <div class="col col-6">
                    <img style="height:250px; width:120px; object-fit:cover;" src="~/img/@product.Photo" alt="@product.Name" />
                </div>
                <div class="col col-6 d-flex flex-column">
                    <h5>@product.Name</h5>
                    <small class="text-muted">@product.Brand</small>
                    <div class="mb-3">
                        <span class="badge badge-secondary mb-2">@product.Price.ToString("c")</span>
                    </div>
                    <div class="btn-group mt-auto" role="group" aria-label="Basic example">
                        <a class="btn btn-success text-white float-right" data-toggle="tooltip" data-placement="top" title="Edit">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a class="btn btn-success text-white float-right" data-toggle="tooltip" data-placement="top" title="See Details">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        <a class="btn btn-success text-white float-right" data-toggle="tooltip" data-placement="top" title="Add to Cart">
                            <i class="bi bi-bag-plus"></i>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}