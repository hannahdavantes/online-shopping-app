@model SignInViewModel


@{
    ViewData["Title"] = "Sign in to Your Account";
}

@if (TempData["ErrorMessage"] != null) {
    <div class="row my-1">
        <div class="alert alert-danger w-100 text-center" role="alert">
            <strong>@TempData["ErrorMessage"]</strong>
        </div>
    </div>
}
@if (TempData["SuccessMessage"] != null) {
    <div class="row my-1">
        <div class="alert alert-success w-100 text-center" role="alert">
            <strong>@TempData["SuccessMessage"]</strong>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row mb-1 justify-content-center">
            <h1 class="display-4 text-center">Sign In To Your Account</h1>
        </div>
        <div class="row mt-3">
            <div class="col-md-8 offset-2">
                <form class="form" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="EmailAddress" class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="EmailAddress" class="form-control " />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-block btn-success">Sign In</button>
                </form>
                <p class="small text-center">Not registered? Create your account <a asp-action="Register">here.</a></p>
            </div>
        </div>
    </div>
</div>
