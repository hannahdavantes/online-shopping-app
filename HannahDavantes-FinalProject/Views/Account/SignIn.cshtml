@model SignInViewModel


@{
    ViewData["Title"] = "Sign in to Your Account";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row mb-1 justify-content-center">
            <h1 class="display-4 text-center">Sign In To Your Account</h1>
        </div>
        <div class="row mt-3">
            <div class="col-md-8 offset-2">
                <form class="form" asp-action="SignIn">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="EmailAddress" class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="EmailAddress" class="form-control " />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="control-label col-3"></label>
                        <div class="col-9">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-block btn-success">Sign In</button>
                </form>
            </div>
        </div>
    </div>
</div>
